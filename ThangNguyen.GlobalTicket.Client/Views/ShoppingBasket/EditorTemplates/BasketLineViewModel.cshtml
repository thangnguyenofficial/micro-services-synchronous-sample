@model ThangNguyen.GlobalTicket.Client.Models.ShoppingBasket.BasketLineViewModel

<tr>
    <td>@Model.EventName</td>
    <td>@Model.Date.DateTime.ToShortDateString()</td>
    <td class="bold">$@Model.Price</td>
    <td>
        <form asp-action="UpdateProductLine">
            <input type="hidden" name="BasketLineId" value="@Model.BasketLineId" />
            <select name="Quantity" class="w-25" asp-for="@Model.Quantity">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button type="submit" class="filterButton">Update</button>
        </form>
    </td>
    <td class="bold big">$@(Model.Price * Model.Quantity) </td>
    <td>
        <a asp-action="RemoveProductLine" asp-route-basketLineId="@Model.BasketLineId">
            <img class="cancelIcon" src="~/img/times.svg" />
        </a>
    </td>
</tr>